            "command": "make -j2 server",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Make client",
            "type": "shell",
            "command": "make -j2 client",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Make core",
            "type": "shell",
            "command": "make -j2 core",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Make clean ",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Make clean project",
            "type": "shell",
